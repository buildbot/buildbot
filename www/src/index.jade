extends layout
block content
  // navbar
  div.navbar.navbar-inverse
    div.navbar-inner
      div.container
        button.navbar-toggle(ng-init="isCollapsed=1",ng-click="isCollapsed = !isCollapsed")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#/")
          img#logo(src="img/favicon.ico")
          | &nbsp;Buildbot
        div.nav-collapse(ng-class="{collapse:isCollapsed}",ng-click="isCollapsed = 1")
          topmenu
  // fluid container
  div(ng-controller="alertPanelController")
    alert(ng-repeat="alert in alerts",type="alert.type",close="closeAlert($index)", ng-animate="'repeat'")
      | {{alert.msg}}{{alert.occur_msg}}
  ng:view
