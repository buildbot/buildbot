  abstract-class-not-used,
  abstract-class-little-used,
  deprecated-module,
  fixme,
  global-variable-undefined,
  unused-argument,
  maybe-no-member,
  locally-disabled,
  bad-classmethod-argument,
  line-too-long,
  method-hidden,
  no-name-in-module,
  no-member,
  not-callable,
  too-many-function-args,
  unexpected-keyword-arg,
